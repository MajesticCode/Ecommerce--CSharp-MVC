<body>

	<input type=text id=search placeholder="search...">
	<button id=filter>Filter</button>
<div class="products">
	@{
		int i = 5;
		foreach(var j in ViewBag.Products)
		{
			if(i-- < 1)
			{
				break;
			}
		<span>	<img src = @j.URL> </span>
			<p>@j.Name</p> 
			<p>(@j.Quantity left)</p>
		}
	}
</div>
	<h3>Recent Orders</h3>
	@{
		i = 3;
		foreach(var j in ViewBag.Orders)
		{
			if(i-- < 1)
			{
				break;
			}
			<p>@j.user.Name purchased @j.Quantity @j.product.Name ...(some hours ago)</p>
		}
	}

	<h3>New Customers</h3>
	@{
		i = 3;
		foreach(var j in ViewBag.Users)
		{
			if(i-- < 1)
			{
				break;
			}
			<p>@j.Name joined the store (some hours ago)</p>
		}
	}
</body>
